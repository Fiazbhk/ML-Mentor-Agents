# DataAnalysisAgent Environment Configuration
# Copy this file to .env and update the values as needed

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Application environment (development, staging, production)
APP_ENV=development

# Application port
PORT=8000

# Application host
HOST=0.0.0.0

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==========================================
# CORAL PROTOCOL SETTINGS
# ==========================================

# Coral Registry URL
CORAL_REGISTRY_URL=https://registry.coral.ai

# Coral API Key (get from Coral Protocol dashboard)
CORAL_API_KEY=your_coral_api_key_here

# Agent unique identifier
AGENT_ID=data-analysis-agent-v1

# Agent authentication token
AGENT_TOKEN=your_agent_token_here

# Enable Coral integration (true/false)
CORAL_ENABLED=true

# ==========================================
# DATA PROCESSING SETTINGS
# ==========================================

# Maximum file size for upload (in bytes)
MAX_FILE_SIZE=104857600  # 100MB

# Maximum number of rows to process
MAX_ROWS=1000000

# Maximum number of columns to process
MAX_COLUMNS=1000

# Supported file formats (comma-separated)
SUPPORTED_FORMATS=csv,json,xlsx,xls,parquet

# Data processing timeout (in seconds)
PROCESSING_TIMEOUT=300  # 5 minutes

# Enable data caching (true/false)
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=3600  # 1 hour

# ==========================================
# ANALYSIS SETTINGS
# ==========================================

# Statistical significance level for outlier detection
OUTLIER_THRESHOLD=0.05

# Minimum correlation threshold for feature relationships
CORRELATION_THRESHOLD=0.7

# Maximum number of unique values for categorical features
MAX_CATEGORICAL_UNIQUE=50

# Sample size for large dataset analysis
SAMPLE_SIZE=10000

# Enable advanced statistical analysis (true/false)
ENABLE_ADVANCED_STATS=true

# ==========================================
# SECURITY SETTINGS
# ==========================================

# Secret key for session management
SECRET_KEY=your_secret_key_here_change_in_production

# Enable CORS (true/false)
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://app.mlmentor.dev

# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Rate limit per minute per IP
RATE_LIMIT=60

# ==========================================
# DATABASE SETTINGS (Optional)
# ==========================================

# Database URL (for storing analysis results)
# DATABASE_URL=postgresql://user:password@localhost:5432/mlmentor

# Enable result persistence (true/false)
PERSIST_RESULTS=false

# Results retention period in days
RESULTS_RETENTION_DAYS=30

# ==========================================
# MONITORING & TELEMETRY
# ==========================================

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Metrics collection endpoint
METRICS_ENDPOINT=http://prometheus:9090

# Enable distributed tracing (true/false)
ENABLE_TRACING=false

# Tracing service endpoint
TRACING_ENDPOINT=http://jaeger:14268

# Enable health checks (true/false)
ENABLE_HEALTH_CHECKS=true

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# ==========================================
# EXTERNAL SERVICES
# ==========================================

# Redis URL for caching (optional)
# REDIS_URL=redis://localhost:6379/0

# S3-compatible storage for large files (optional)
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY=your_s3_access_key
# S3_SECRET_KEY=your_s3_secret_key
# S3_BUCKET=mlmentor-datasets

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Enable hot reload in development (true/false)
RELOAD=true

# Enable detailed error traces (true/false)
SHOW_ERROR_DETAILS=true

# Mock external services (true/false)
MOCK_EXTERNAL_SERVICES=false

# Test data directory
TEST_DATA_DIR=./datasets

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================

# Number of worker processes
WORKERS=1

# Worker timeout in seconds
WORKER_TIMEOUT=300

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Memory limit per request (in MB)
MEMORY_LIMIT=1024

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable experimental features (true/false)
ENABLE_EXPERIMENTAL=false

# Enable visualization suggestions (true/false)
ENABLE_VISUALIZATION_SUGGESTIONS=true

# Enable ML insights generation (true/false)
ENABLE_ML_INSIGHTS=true

# Enable preprocessing recommendations (true/false)
ENABLE_PREPROCESSING_RECOMMENDATIONS=true

# Enable advanced correlation analysis (true/false)
ENABLE_ADVANCED_CORRELATION=true