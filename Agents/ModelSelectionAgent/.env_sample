# ModelSelectionAgent Environment Configuration
# Copy this file to .env and update the values as needed

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Application environment (development, staging, production)
APP_ENV=development

# Application port
PORT=8001

# Application host
HOST=0.0.0.0

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==========================================
# CORAL PROTOCOL SETTINGS
# ==========================================

# Coral Registry URL
CORAL_REGISTRY_URL=https://registry.coral.ai

# Coral API Key (get from Coral Protocol dashboard)
CORAL_API_KEY=your_coral_api_key_here

# Agent unique identifier
AGENT_ID=model-selection-agent-v1

# Agent authentication token
AGENT_TOKEN=your_agent_token_here

# Enable Coral integration (true/false)
CORAL_ENABLED=true

# ==========================================
# MODEL RECOMMENDATION SETTINGS
# ==========================================

# Default number of model recommendations to return
MAX_RECOMMENDATIONS=5

# Confidence threshold for recommendations (0.0-1.0)
MIN_CONFIDENCE_THRESHOLD=0.6

# Enable advanced model suggestions (true/false)
ENABLE_ADVANCED_MODELS=true

# Default skill level if not specified
DEFAULT_SKILL_LEVEL=beginner

# Enable model performance benchmarking (true/false)
ENABLE_BENCHMARKING=true

# Model database cache TTL in seconds
MODEL_CACHE_TTL=86400  # 24 hours

# ==========================================
# RECOMMENDATION ENGINE SETTINGS
# ==========================================

# Weight for dataset size in scoring (0.0-1.0)
DATASET_SIZE_WEIGHT=0.3

# Weight for data quality in scoring (0.0-1.0)
DATA_QUALITY_WEIGHT=0.2

# Weight for user preferences in scoring (0.0-1.0)
USER_PREFERENCE_WEIGHT=0.3

# Weight for model complexity in scoring (0.0-1.0)
COMPLEXITY_WEIGHT=0.2

# Enable dynamic scoring adjustments (true/false)
ENABLE_DYNAMIC_SCORING=true

# ==========================================
# INTEGRATION SETTINGS
# ==========================================

# DataAnalysisAgent endpoint for integration
DATA_ANALYSIS_AGENT_URL=http://localhost:8000

# Enable integration with other ML Mentor agents (true/false)
ENABLE_AGENT_INTEGRATION=true

# Timeout for agent-to-agent communication (seconds)
AGENT_COMMUNICATION_TIMEOUT=30

# ==========================================
# MACHINE LEARNING LIBRARIES
# ==========================================

# Enable scikit-learn recommendations (true/false)
ENABLE_SKLEARN=true

# Enable XGBoost recommendations (true/false)
ENABLE_XGBOOST=false

# Enable LightGBM recommendations (true/false)
ENABLE_LIGHTGBM=false

# Enable CatBoost recommendations (true/false)
ENABLE_CATBOOST=false

# Enable neural network recommendations (true/false)
ENABLE_NEURAL_NETWORKS=false

# ==========================================
# EDUCATIONAL FEATURES
# ==========================================

# Enable beginner explanations (true/false)
ENABLE_BEGINNER_EXPLANATIONS=true

# Enable pros/cons analysis (true/false)
ENABLE_PROS_CONS=true

# Enable use case examples (true/false)
ENABLE_USE_CASES=true

# Enable next steps guidance (true/false)
ENABLE_NEXT_STEPS=true

# Language for explanations
EXPLANATION_LANGUAGE=english

# ==========================================
# SECURITY SETTINGS
# ==========================================

# Secret key for session management
SECRET_KEY=your_secret_key_here_change_in_production

# Enable CORS (true/false)
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://app.mlmentor.dev

# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Rate limit per minute per IP
RATE_LIMIT=100

# Enable request validation (true/false)
ENABLE_REQUEST_VALIDATION=true

# ==========================================
# DATABASE SETTINGS (Optional)
# ==========================================

# Database URL for storing recommendations
# DATABASE_URL=postgresql://user:password@localhost:5432/mlmentor

# Enable recommendation history (true/false)
STORE_RECOMMENDATION_HISTORY=false

# History retention period in days
HISTORY_RETENTION_DAYS=90

# ==========================================
# CACHING SETTINGS
# ==========================================

# Enable response caching (true/false)
ENABLE_RESPONSE_CACHING=true

# Cache TTL for recommendations (seconds)
RECOMMENDATION_CACHE_TTL=3600  # 1 hour

# Redis URL for caching (optional)
# REDIS_URL=redis://localhost:6379/1

# Cache key prefix
CACHE_KEY_PREFIX=model_selection_

# ==========================================
# MONITORING & TELEMETRY
# ==========================================

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Metrics collection endpoint
METRICS_ENDPOINT=http://prometheus:9090

# Enable recommendation accuracy tracking (true/false)
TRACK_RECOMMENDATION_ACCURACY=true

# Enable user feedback collection (true/false)
ENABLE_FEEDBACK_COLLECTION=true

# Enable distributed tracing (true/false)
ENABLE_TRACING=false

# Tracing service endpoint
TRACING_ENDPOINT=http://jaeger:14268

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================

# Number of worker processes
WORKERS=1

# Worker timeout in seconds
WORKER_TIMEOUT=60

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=50

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Memory limit per request (in MB)
MEMORY_LIMIT=256

# Enable request queuing (true/false)
ENABLE_REQUEST_QUEUE=false

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Enable hot reload in development (true/false)
RELOAD=true

# Enable detailed error traces (true/false)
SHOW_ERROR_DETAILS=true

# Mock model training times (true/false)
MOCK_TRAINING_TIMES=false

# Enable development mode features (true/false)
DEVELOPMENT_MODE=true

# Test model database path
TEST_MODEL_DB_PATH=./test_models.json

# ==========================================
# EXTERNAL SERVICES
# ==========================================

# Model validation service endpoint (optional)
# MODEL_VALIDATION_SERVICE=http://validation-service:8080

# Hyperparameter optimization service (optional)
# HYPEROPT_SERVICE_URL=http://hyperopt:8080

# Model performance database (optional)
# PERFORMANCE_DB_URL=http://performance-db:8080

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable experimental algorithms (true/false)
ENABLE_EXPERIMENTAL_ALGORITHMS=false

# Enable AutoML integration (true/false)
ENABLE_AUTOML_INTEGRATION=false

# Enable ensemble method recommendations (true/false)
ENABLE_ENSEMBLE_METHODS=true

# Enable deep learning recommendations (true/false)
ENABLE_DEEP_LEARNING=false

# Enable time series specific models (true/false)
ENABLE_TIME_SERIES_MODELS=false

# Enable reinforcement learning models (true/false)
ENABLE_RL_MODELS=false

# ==========================================
# MODEL VALIDATION
# ==========================================

# Enable cross-validation recommendations (true/false)
RECOMMEND_CROSS_VALIDATION=true

# Default number of CV folds
DEFAULT_CV_FOLDS=5

# Enable holdout validation recommendations (true/false)
RECOMMEND_HOLDOUT_VALIDATION=true

# Default test set size ratio
DEFAULT_TEST_SIZE=0.2

# Enable stratified sampling recommendations (true/false)
RECOMMEND_STRATIFIED_SAMPLING=true